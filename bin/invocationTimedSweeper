#!/bin/bash

INVOCATIONSPECIALIZATION_DESCRIPTION="Execute COMMAND while rotating a Knight Rider-alike sweeping control regularly
every second and faster in case of (stdout / stderr) output, while also tallying
its total running time."

INVOCATIONSPECIALIZATION_SUCCESS_DISPLAY_DELAY="${INVOCATIONTIMEDSWEEPER_SUCCESS_DISPLAY_DELAY-0.3}"
INVOCATIONSPECIALIZATION_FAIL_DISPLAY_DELAY="${INVOCATIONTIMEDSWEEPER_FAIL_DISPLAY_DELAY-1}"

INVOCATIONSPECIALIZATION_ARGUMENTS='--sweep --timespan 0 --timer 1 --render-timer 1'

readonly scriptDir="$([ "${BASH_SOURCE[0]}" ] && dirname -- "${BASH_SOURCE[0]}" || exit 3)"
[ -d "$scriptDir" ] || { echo >&2 "ERROR: Cannot determine script directory!"; exit 3; }

source "${scriptDir}/../lib/invocationSpecialization.sh"
